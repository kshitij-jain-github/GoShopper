@model Ecommerce.Model.ViewModel.ShoppingCartVM

 
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-light text-dark ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 text-end">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach (var item in Model.ShoppingCartList)
				{
					<div class="row">
						<div class="d-none d-lg-block col-lg-1 text-center py-2">
							<img src="@item.Product.ImageUrl" class="rounded" width="100" />
						</div>
						<div class="col-12 col-lg-6 pt-md-3 text-center  ">
							<h5><strong>@item.Product.Product_Name</strong></h5>
						 
						</div>
						<div class="col-12  col-lg-5 text-center row">
							<div class="col-4 text-md-right pt-4">
								<h6>
									<strong>
										@item.Product.Price.ToString("c")
										<span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
									</strong>
								</h6>
							</div>
							<div class="col-6 col-sm-4 col-lg-6 pt-2">
								<div class="w-75 btn-group" role="group">
									<a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
										<i class="fa fa-square-plus"></i>
									</a> &nbsp;
									<a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-warning">
										<i class="fa fa-square-minus"></i>
									</a>
								</div>

							</div>
							<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
								<a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
									<i class="fa-solid fa-trash"></i>
								</a>
							</div>
						</div>
					</div>
					<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-success"> Total (USD)</span>
								<strong class="text-success">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a asp-action="Summary" class="btn btn-primary form-control">Checkout</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
