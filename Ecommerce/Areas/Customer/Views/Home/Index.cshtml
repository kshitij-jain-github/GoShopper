    </div>
</div>
<!-- Carousel End -->
<!--Main layout-->
<main>
    <div class="container">
     
        <!-- Products -->
        <section>
            <div class="text-center">
                <div class="row">

                	@foreach (var product in Model)
                {
                  
                    <div class="col-lg-3 col-md-6 mb-4 " >
                        <div class="card">
                            <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                                 data-mdb-ripple-color="light">
                                <img src="@product.ImageUrl" width="250" height="300" class="p-3"/>
                                <a href="#!">
                                    <div class="mask">
                                        <div class="d-flex justify-content-start align-items-end h-100">
                                            <h5><span class="badge bg-success ms-2">NEW</span></h5>
                                        </div>
                                    </div>
                                    <div class="hover-overlay">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                    </div>
                                </a>
                            </div>
                            <div class="card-body " >
                                <a href="" class="text-reset">
                                    <h5 class="card-title mb-2">@product.Product_Name</h5>
                                        <h6>by @product.Brand</h6>
                                </a>
                                <a href="" class="text-reset ">
                                  <b>@product.Category.Name</b>
                                </a>
                                 <div class="mt-1 mb-0 text-muted small">
                                            <span><b>Fabric: </b>@product.Fabric</span>
                                          

                                    </div>
                                    <h4 class="mb-1 me-1">$@product.Price  <span class="text-danger h6"><s>$@product.ListPrice</s></span></h4>
                                   
                                    <h6 class="text-success">Free shipping</h6>
                                    <div class="d-flex flex-column mt-4">
                                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary btn-sm" type="button">Details</a>
                                        <a data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary btn-sm mt-2" type="button">
                                            Add to wishlist
                                        </a>
                                    </div>
                            </div>
                            
                        </div>
                    </div>

}
            
            </div>
            </div>

        </section>

        <!-- Pagination -->
        <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- Pagination -->
    </div>
</main>
<!--Main layout--> 